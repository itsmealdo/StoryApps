<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApps" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_50</item>
        <item name="android:windowBackground">@color/black_50</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLogo">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="TextUsername">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="TextLogin">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="DescBox">
        <item name="android:backgroundTint">@color/black_60</item>
        <item name="android:textColor">@color/white_50</item>
    </style>
</resources>